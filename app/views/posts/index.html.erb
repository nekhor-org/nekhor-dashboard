<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col">
    <h1 class="mt-4">Post</h1>
  </div>
  <div class="col d-flex justify-content-end align-items-center">
    <%= link_to "New Posts", new_post_path, class: "btn btn-primary w-auto" %>
  </div>
</div>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col-xl-3 col-md-6">
        <div class="card" style="width: 18rem">
          <%= image_tag post.image.persisted? ? post.image : "default-image.jpg", class: "card-img-top", style: "height: 160px;" %>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= post.subtitle %></p>
          </div>
           <div class="card-body ">
            <%= link_to "Edit Post", edit_post_path(post.id), class: "small btn btn-success ", style: "font-size: 12px;margin: 8px;" %>
            <%= link_to "Edit Post Content", post_post_contents_path(post.id), class: "small btn btn-primary ", style: "font-size: 12px;margin: 8px;"  %>
            <%= link_to "Add Home", toggle_post_path(post.id), class: "small btn btn-success ", style: "font-size: 12px;margin: 8px;"  unless post.has_home? %>
            <%= link_to "Remove Home", toggle_post_path(post.id), class: "small btn btn-danger ", style: "font-size: 12px;margin: 8px;"   if post.has_home?%>
            <%= link_to "Delete", post_path(post.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "small btn btn-danger ", style: "font-size: 12px;margin-right: 8px;"%>
            
          </div>
        </div>
    </div>
  <% end %>
</div>
