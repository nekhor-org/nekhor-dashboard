<p style="color: green"><%= notice %></p>
<div class="row">
  <div class="col">
    <h1 class="mt-4">Countries</h1>
  </div>
  <div class="col d-flex justify-content-end align-items-center">
    <%= link_to "New Country", new_country_path, class: "btn btn-primary w-auto" %>
  </div>
</div>
<div class="row">
  <table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
      <% @countries.each do |country| %>
        <%= render country %>
      <% end %>
    </tbody>
  </table>
</div>
