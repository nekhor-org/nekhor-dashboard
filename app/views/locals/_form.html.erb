<%= simple_form_for(@local) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, input_html: { class: "form-control" } %>
  </div>

  <% unless @local.new_record? %>
    <hr />
      <div class="p-4">
        <%= f.simple_fields_for :local_names do |local_name| %>
          <h3 class="mt-3" >Local Name - <%= local_name.object&.language&.name %></h3>
          <%= local_name.input :name, input_html: { class: "form-control" } %>
        <% end %>
      </div>
    <hr />
  <% end %>
    
  <div class="form-actions mt-4">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>